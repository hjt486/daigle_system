<h2 align="center"> Pen # <%= @pen.pen_id%></h2>
<div class="well col-xs-12">
    <% if @pen.user %>
    <ul class="listing">
        <div class="row center">
            <div class="well col-md-4 col-md-offset-4">
                <div>Animal Technician:</li>
                <li><%= link_to gravatar_for(@pen.user), user_path(@pen.user) %></li>
                <li class="pen-title">
                    <%= link_to @pen.user.username, user_path(@pen.user) %>
                </li>
                <li><small>
                    <%= pluralize(@pen.user.pens.count, "pen") if @pen.user.pens %>
                </small></li>
            </div>
        </div>
    </ul>
    <% end %>
    <h4 class="center description"><strong>Details:</strong></h4>
    <div>
                  Total #: <%= @pen.total_num %> |
                  Pull(s) #: <%= @pen.pull_num %> |
                  Dead(s) #: <%= @pen.dead_num %>
                </div>
                <div>
                  Feed? <% if @pen.feed_check == true %>
                    CHECKED
                    <% else %>
                    unchecked
                    <% end %>
                </div>

                <div>
                    <% if @pen.feed_comment.present?%>
                    Comment: <%= simple_format(@pen.feed_comment) %>
                    <% end %>
                </div>

                <div>
                  Water? <% if @pen.water_check == true %>
                    CHECKED
                    <% else %>
                    unchecked
                    <% end %>
                </div>

                <div>
                    <% if @pen.water_comment.present?%>
                    Comment: <%= simple_format(@pen.water_comment) %>
                    <% end %>
                </div>

                <div>
                  Mud? <% if @pen.mud_check == true %>
                    CHECKED
                    <% else %>
                    unchecked
                    <% end %>
                </div>

                <div>
                    <% if @pen.mud_comment.present?%>
                    Comment: <%= simple_format(@pen.mud_comment) %>
                    <% end %>
                </div>

                <div>
                  Need Maintenance? <% if @pen.maintenance_check == true %>
                    YES
                    <% else %>
                    no
                    <% end %>
                </div>

                <div>
                    <% if @pen.maintenance_comment.present?%>
                    Comment: <%= simple_format(@pen.maintenance_comment) %>
                    <% end %>
                </div>


       <div class="pen-actions">
         <% if logged_in? && current_user == @pen.user %>
           <%= link_to "Edit this pen", edit_pen_path(@pen),
                                          class:"btn btn-xs btn-primary"%>
          <% end %>
          <% if logged_in? && current_user.admin? %>
           <%= link_to "Delete these pens", pens_path(@pen),
                                           method: :delete, data: {confirm: "Are you sure you want to delete this pen?"},
                                           class:"btn btn-xs btn-danger" %>
         <% end %>
         <%= link_to "View all pens", pens_path, class:"btn btn-xs btn-success" %>
       </div>
</div>
