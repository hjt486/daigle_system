<h1 align="center">Pen #<%= @pen.num %></h1>

<div class="col-sm-12">
<div class="well well-lg">
<div class = "pen-body">
<div id="pen-tables">
<div class="table">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="col-sm-1" scope="col">Pen Number</th>
        <th class="col-sm-2" scope="col">Total Number</th>
        <th class="col-sm-2" scope="col">Modify</th>
      </tr>
    </thead>
    <tbody>
     <tr scope="row">
      <td><%= @pen.num %></td>
      <td><%= @pen.total_num %></td>
      <td>
      <% if logged_in? && current_user.admin?%>
      <%= link_to "Edit", edit_pen_path(@pen), class:"btn btn-xs btn-primary"%>
      <%= link_to "Delete", @pen, method: :delete, data: {confirm: "Are you sure you want to delete this pen?"},
      class:"btn btn-xs btn-danger" %>
      <% end %></td>
      </td>
    </tr>
  </tbody>
  </table>
</div>
</div>
</div>
</div>
</div>


<h4 align="center">Activities of Pen #<%= @pen.num %></h4>
<%= render 'activities/activity', obj: @pen_activities %>
<div class="center">
    <%= will_paginate @pen_activities %>
</div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= link_to "Return", pens_path, class: 'btn btn-warning btn-lg' %>
    </div>
