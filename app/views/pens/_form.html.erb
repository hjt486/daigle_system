<%= render 'shared/errors', obj: @pen%>

<div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@pen, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :num, "Pen#", class: "form-label"%>
              </div>
              <div class="col-sm-8">
                <%= f.number_field :num, class: "form-control", placeholder: "Enter the number of new pen"%>
              </div>
          </div>

          <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :total_num, "Total#", class: "form-label"%>
              </div>
              <div class="col-sm-8">
                <%= f.number_field :total_num, class: "form-control", placeholder: "Enter the total number of animals"%>
              </div>
          </div>

        <div class="form-group">
          <div class="col-sm-12">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
            <div class="btn">
            <%= link_to "Cancel", pens_path, class: 'btn btn-warning btn-lg'%>
            </div>
          </div>
        <% end %>
    </div>
</div>
