<div class="row">
  <div class="col-xs-12">
      <div class="well well-lg">
        <div class = "pen-body">
          <% if @pens.present? %>
          <div id="pens-tables">
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th scope="col">Pen</th>
                  <th scope="col">Total</th>
                  <th scope="col">Pull</th>
                  <th scope="col">Dead</th>
                  <th scope="col">Feed</th>
                  <th scope="col">Water</th>
                  <th scope="col">Mud</th>
                  <th scope="col">Maintenance</th>
                  <th scope="col">Last Updated</th>
                  <th scope="col">Modify</th>
                </tr>
              </thead>
              <tbody>

              <% obj.each do |pen| %>
               <tr scope="row">
                <td><%= pen.num %></td>
                <td><%= pen.total_num %></td>
                <% @activity =  activities.where(pen_id: pen.id).order("check_out").last %>
                <td><%= @activity.pen_pull_num %></td>
                <td><%= @activity.pen_dead_num %></td>
                <td><% if @activity.pen_feed_check %>&#10003<% else %>&#10006<% end %></td>
                <td><% if @activity.pen_water_check %>&#10003<% else %>&#10006<% end %></td>
                <td><% if @activity.pen_mud_check %>&#10003<% else %>&#10006<% end %></td>
                <td><% if @activity.pen_maintenance_check %>&#10003<% else %>&#10006<% end %></td>
                <td><%= @activity.check_out.to_s(format = :long) %></td>
                <td><%= link_to "Edit", edit_pen_path(pen.id), class:"btn btn-xs btn-primary"%></td>
              <% end %>
            </tbody>
            </table>
          </div>

          <% else %>
          <div class="empty" >
          No pens
          </div>
          <% end %>

         </div>
      </div>
    </div>
  </div>
