<div class="row">
<div align="center">
<% if @mud_calls.present? %>
  <% obj.each do |mud_call| %>
    <% @pen = @pens.find(mud_call.pen_id) %>
    <% @user = @users.find(mud_call.user_id) %>
    <div class="mud_call-box well well-lg">
      <div class="table">
        <table>
          <tr scope="row"><td><h4 align="center"> Pen #<%= @pen.num %></h4> </td></tr>
          <tr scope="row"><td><hr /></td></tr>
          <tr scope="row"><td><small align="center">Submitted by<small></td></tr>
          <tr scope="row"><td>
            <%= link_to(@user ) do %>
            <%= @user.first_name %> <%= @user.last_name %>
            <% end %>
            </td>
          <tr scope="row"><td><hr /></td></tr>
          <tr scope="row"><td><small align="center"><%= mud_call.created_at.to_s(format = :long)%><small></td></tr>
          <tr scope="row"><td><br /></td></tr>
          <tr scope="row"><td>
            <%= form_for(@new_mud_call, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <%= f.hidden_field :resolved, :value => "1"  %>
            <%= f.hidden_field :activity_id, :value => mud_call.id %>
            <%= f.submit "Resolved",class: 'btn btn-success btn-lg' %>
            <% end %>
            </td></tr>
        </table>
      </div>
    </div>
  <% end %>
</div>

<% else %>
  <div class="well well-lg">
    <div class="empty" > No mud handling request</div>
  </div>
<% end %>
</div>
