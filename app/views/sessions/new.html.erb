<h1 align="center">Log in</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
          <div class="form-group">
              <div class="control-label col-sm-3">
                <%= f.label :username %>
              </div>
              <div class="col-sm-6">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true%>
              </div>
          </div>
          <div class="form-group">
              <div class="control-label col-sm-3">
                <%= f.label :password %><br/>
              </div>
              <div class="col-sm-6">
                <%= f.password_field :password, class: "form-control",  placeholder: "Enter password", autocomplete: "off" %>
              </div>
          </div>
        <div class="form-group">
          <div class="col-sm-6 col-sm-offset-3">
            <%= f.submit "Login", class: 'btn btn-primary btn-lg' %>
            <%= link_to "Return", root_path, class: 'btn btn-warning btn-lg' %>
        </div>
    <% end %>
