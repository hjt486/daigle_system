<h2 align="center"> Pen # <%= @activity.pen_id%></h2>
<div class="well col-xs-8 col-xs-offset-2">
    <% if @activity.user %>
    <ul class="listing">
        <div class="row center">
            <div class="well col-md-4 col-md-offset-4">
                <div>Animal Technician:</li>
                <li><%= link_to gravatar_for(@activity.user), user_path(@activity.user) %></li>
                <li class="activity-title">
                    <%= link_to @activity.user.username, user_path(@activity.user) %>
                </li>
                <li><small>
                    <%= pluralize(@activity.user.activities.count, "activity") if @activity.user.activities %>
                </small></li>
            </div>
        </div>
    </ul>
    <% end %>
    <h4 class="center description"><strong>Details:</strong></h4>
    <div>
                  Total #: <%= @activity.total_num %> |
                  Pull(s) #: <%= @activity.pull_num %> |
                  Dead(s) #: <%= @activity.dead_num %>
                </div>
                <div>
                  Feed? <% if @activity.feed_check == true %>
                    CHECKED
                    <% else %>
                    unchecked
                    <% end %>
                </div>

                <div>
                    <% if @activity.feed_comment.present?%>
                    Comment: <%= simple_format(@activity.feed_comment) %>
                    <% end %>
                </div>

                <div>
                  Water? <% if @activity.water_check == true %>
                    CHECKED
                    <% else %>
                    unchecked
                    <% end %>
                </div>

                <div>
                    <% if @activity.water_comment.present?%>
                    Comment: <%= simple_format(@activity.water_comment) %>
                    <% end %>
                </div>

                <div>
                  Mud? <% if @activity.mud_check == true %>
                    CHECKED
                    <% else %>
                    unchecked
                    <% end %>
                </div>

                <div>
                    <% if @activity.mud_comment.present?%>
                    Comment: <%= simple_format(@activity.mud_comment) %>
                    <% end %>
                </div>

                <div>
                  Need Maintenance? <% if @activity.maintenance_check == true %>
                    YES
                    <% else %>
                    no
                    <% end %>
                </div>

                <div>
                    <% if @activity.maintenance_comment.present?%>
                    Comment: <%= simple_format(@activity.maintenance_comment) %>
                    <% end %>
                </div>


       <div class="activity-actions">
         <% if logged_in? && current_user == @activity.user %>
           <%= link_to "Edit this activity", edit_activity_path(@activity),
                                          class:"btn btn-xs btn-primary"%>
          <% end %>
          <% if logged_in? && current_user.admin? %>
           <%= link_to "Delete these activities", activities_path(@activity),
                                           method: :delete, data: {confirm: "Are you sure you want to delete this activity?"},
                                           class:"btn btn-xs btn-danger" %>
         <% end %>
         <%= link_to "View all activities", activities_path, class:"btn btn-xs btn-success" %>
       </div>
</div>
