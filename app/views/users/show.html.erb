<h1 align="center">User <%= @user.username%></h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @user, size: 150%>
    </div>
</div>
<h4 align="center"><%= @user.username %>'s activities</h4>
<%= render 'activities/activity', obj: @user_activities %>
<div class="center">
    <%= will_paginate @user_activities %>
</div>

</div>
<h4 align="center"><%= @user.username %>'s profile</h4>

<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<div class="well well-lg">
<div class="user-body">
<table>
<tr><td><h5 align="left">Username:</h5></td><td><%= @user.username %></td></tr>
<tr>

  <td><h5 align="left">Identity:</h5></td>
  <td>
  <% if @user.admin == true %>
       <li>Administartor</li>
  <% end %>
  <% if @user.cowboy == true %>
    <li>Animal Technician</li>
  <% end %>
  <% if @user.handy == true %>
    <li>Yard Technician</li>
  <% end %>
  <% if @user.doctor == true %>
    <li>Medical Technician</li>
  <% end %>
</td>

</tr>
</table>

    <div class="user-actions">
      <% if logged_in? && (current_user == @user) %>
        <%= link_to "Edit profile", edit_user_path(@user),
                                       class:"btn btn-xs btn-primary"%>
      <% end %>
      <% if logged_in? && current_user.admin? %>
        <%= link_to "Delete this user", user_path(@user),
                                        method: :delete, data: {confirm: "Are you sure you want to delete this user?"},
                                        class:"btn btn-xs btn-danger" %>
      <% end %>
      <%= link_to "View all user", user_path, class:"btn btn-xs btn-success" %>
    </div>
</div>
</div>
</div>
</div>
