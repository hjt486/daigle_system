<h1 align="center">Welcome to <%= @user.username%>'s page </h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @user, size: 150%>
    </div>
</div>
<h4 align="center"><%= @user.username %>'s activities</h4>
<div class="center">
    <%= will_paginate @user_activities %>
</div>
<div class="center">
    <ul>Username: <%= @user.username %></ul>
    <ul>
      Identity:
      <ul>
      <% if @user.admin == true %>
      Administrator
      <% end %>
      </ul>
      <ul>
      <% if @user.cowboy == true %>
      Animal Technician
      <% end %>
      </ul>
      <% if @user.handy == true %>
      Yard Technician
      <ul>
      <% end %>
      <% if @user.doctor == true %>
      </ul>
      Medical Technician
      <ul>
      <% end %>
      </ul>
    </ul>
    <ul>E-mail: <%= @user.email %></ul>
    <ul>Phone #: <%= @user.phone %></ul>
    <ul>Address: <%= @user.address %></ul>

    <div class="user-actions">
      <% if logged_in? && (current_user == @user) %>
        <%= link_to "Edit profile", edit_user_path(@user),
                                       class:"btn btn-xs btn-primary"%>
      <% end %>
      <% if logged_in? && current_user.admin? %>
        <%= link_to "Delete this user", user_path(@user),
                                        method: :delete, data: {confirm: "Are you sure you want to delete this user?"},
                                        class:"btn btn-xs btn-danger" %>
      <% end %>
      <%= link_to "View all user", user_path, class:"btn btn-xs btn-success" %>
    </div>

</div>
<%= render 'activities/activity', obj: @user_activities %>
<div class="center">
    <%= will_paginate @user_activities %>
</div>
