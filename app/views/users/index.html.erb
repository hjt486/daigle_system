<h1 align="center">Users</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="activity-title">
                    <%= link_to user.username, user_path(user) %>
                </li>
                <li>
                  Identity:
                  <li>
                  <% if user.cowboy == true %>
                  Animal Technician
                  <% end %>
                  </li>
                  <% if user.handy == true %>
                  Yard Technician
                  <li>
                  <% end %>
                  <% if user.doctor == true %>
                  </li>
                  Medical Technician
                  <li>
                  <% end %>
                  <% if user.cowboy != true && user.handy != true && user.doctor != true%>
                  None
                  <% end %>
                  </li>
                </li>
                <li><small><%= pluralize(user.activities.count, "activity") if user.activities %></small></li>

            </div>
        </div>
    </ul>
  <% end %>
  <%= will_paginate %>
